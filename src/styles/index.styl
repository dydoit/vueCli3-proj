/*css reset*/
body, ul, li, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, form
  margin: 0;
  padding 0

button,
input,
optgroup,
select,
textarea
  font-family: inherit; /* 1 */
  font-size: 100%; /* 1 */
  line-height: 1.15; /* 1 */
  margin: 0; /* 2 */
i
  font-style: normal
ul
  list-style none
a 
  text-decoration: none
ul, li
  padding: 0;
  list-style: none;
// 局部滚动
html,body
  width 100%
  height 100%
  overflow hidden